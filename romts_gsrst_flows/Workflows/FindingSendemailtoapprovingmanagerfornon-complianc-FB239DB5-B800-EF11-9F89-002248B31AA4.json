              "expression": {
                "equals": [
                  "@variables('managerLanguage')",
                  1036
                ]
              },
              "metadata": {
                "operationMetadataId": "4c1c4cfd-5c6e-43ec-b354-018a59e705b0"
              },
              "type": "If"
            }
          },
          "runAfter": {
